{
	"compilerOptions": {
		"outDir": "dist",
		"module": "esnext",
		"target": "es5",
		"lib": ["es6", "dom", "es2016", "es2017"],
		"sourceMap": true,
		"allowJs": false,
		"jsx": "react-jsx",
		"resolveJsonModule": true,
		"declaration": true,
		"declarationDir": "types",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": ["lib"],
	"exclude": [
		"node_modules",
		"dist",
		"lib/**/*.test.tsx",
		"lib/**/*.stories.tsx"
	]
}
